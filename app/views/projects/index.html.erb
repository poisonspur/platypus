
<table>
    <% @projects.each do |project| %>
      <tr>
        <td><strong><%= project.title %></strong><br />(updated <%= project.updated_at %>)</td>
      </tr>
      <tr>
        <td><%= project.summary.html_safe() %>&nbsp;<%= link_to 'Show', project %></td>
      </tr>
        <% if signed_in? %>
      <tr>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <% end %>
      <tr><td>&nbsp;</td</tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? %>
<%= link_to 'New Project', new_project_path %>
<% end %>
