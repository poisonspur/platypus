<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_items.each do |news_item| %>
      <tr align="left">
        <td><strong><%= news_item['created_at'] %></strong></td>
      </tr>
      <tr>
        <td><%= news_item['body'] %>&nbsp;<%= link_to 'Show', news_item %></td>
      </tr>
      <% if signed_in? %>
      <tr>
        <td><%= link_to 'Edit', edit_news_item_path(news_item) %>&nbsp;
        <%= link_to 'Destroy', news_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
      <tr><td>&nbsp;</td</tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? %>
<%= link_to 'New News item', new_news_item_path %>
<% end %>
